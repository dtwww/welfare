.search {
  display: flex;
  flex-direction: row;
  border: 5rpx solid #EF7687;
  border-radius: 80rpx;
  padding: 10rpx;
  align-items: center;
  margin-top: 30rpx;
  font-size: 33rpx;
}

.sort {
  font-size: 30rpx;
  margin-top: 40rpx;
}

 .sort_time {
  border-style: solid;
  border-color: #EF7687;
  border-width: 5rpx 2.5rpx 5rpx 5rpx;
  border-radius: 100rpx 0 0 100rpx;
  padding: 10rpx;
} 

.sort_heat {
  border-style: solid;
  border-color: #EF7687;
  border-width: 5rpx 5rpx 5rpx 2.5rpx;
  border-radius: 0 100rpx 100rpx 0;
  padding: 10rpx;
}

.content-view {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}

.content-item {
  width: 45%;
  height: 250rpx;
  margin: 10rpx 2.5% 10rpx 2.5%;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.item-text-view {
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 30rpx;
  width: 96%;
  height: 20%;
  background: -webkit-linear-gradient(bottom, rgba(0,0,0,0.8), rgba(0,0,0,0));
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 2% 3% 2%;
}

.text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}