swiper {
  width: 100%;
  height: 400rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.head-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.head {
  padding: 40rpx 0 0 0;
  text-align: center;
  align-self: center;
  color: #EF7687;
}

.content {
  width: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 35rpx;
  padding: 10rpx 40rpx 10rpx 40rpx;
  border-left: 6rpx #EF7687 solid;
  margin: 20rpx 0 15rpx 0;
  align-items: center;
}

.header .text2 {
  color: #EF7687;
  font-size: 30rpx;
}

.content-item {
  width: 100%;
  height: 560rpx;
}

.item-img-view {
  height: 430rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item-img {
  width: 96%;
  height: 100%;  
}

.item-text-view {
  font-size: 35rpx;
  padding: 10rpx 40rpx 10rpx 40rpx;
  margin: 10rpx 0 10rpx 0;
}

.item-text2-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #4D4D4D;
  font-size: 30rpx;
  align-items: center;
}

.item-text2-view .text2 {
  color: #EF7687;
  font-size: 35rpx;
}

.line {
  background-color: #D6D6D6;
  height: 8rpx;
}

