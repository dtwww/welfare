.title {
  width: 96%;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 45rpx;
}

.something-else {
  width: 96%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 60rpx;
  font-size: 25rpx;
  color: gray;
  margin-top: 10rpx;
  margin-bottom: -10rpx;
}

swiper {
  width: 96%;
  height: 400rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.introduce {
  width: 96%;
  margin-top: 20rpx;
  text-indent: 2rem;
  font-size: 35rpx;
  color: #4d4d4d;
  line-height: 45rpx;
  letter-spacing: 3rpx;
  overflow-wrap: break-word;
}

.sum {
  width: 96%;
  padding-bottom: 20rpx;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 35rpx;
}

.sum .text2 {
  color: #ef7687;
  font-size: 45rpx;
}

.sum .detail {
  color: #ef7687;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.interested {
  width: 96%;
  color: #ef7687;
  font-size: 32rpx;
  margin-top: 10rpx;
  text-align: center;
}

.operation {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.operation button {
  color: white;
  background-color: #ef7687;
  width: 40%;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: white;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 36rpx;
  color: white;
  text-align: center;
  background-color: #ef7687;
}

.input-modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  text-align: center;
  font-size: 36rpx;
}

.input-modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-confirm {
  width: 50%;
  color: #ef7687;
  text-align: center;
  border-right: 1px solid #dedede;
}

.joined-btn-confirm {
  width: 100%;
  color: #ef7687;
  text-align: center;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
}
