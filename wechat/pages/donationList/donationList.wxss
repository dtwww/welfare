.head-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.head {
  padding: 40rpx 0 0 0;
  text-align: center;
  align-self: center;
  color: #ef7687;
}

.search {
  display: flex;
  flex-direction: row;
  border: 5rpx solid #ef7687;
  border-radius: 80rpx;
  padding: 10rpx;
  align-items: center;
  margin-top: 30rpx;
  font-size: 33rpx;
}

.sort {
  font-size: 30rpx;
  margin-top: 40rpx;
}

.sort-view {
  width: 96%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.sort_time {
  border-style: solid;
  border-color: #ef7687;
  border-width: 5rpx 2.5rpx 5rpx 5rpx;
  padding: 10rpx;
}

.sort_heat {
  border-style: solid;
  border-color: #ef7687;
  border-width: 5rpx 5rpx 5rpx 2.5rpx;
  padding: 10rpx;
}

.content-view {
  width: 96%;
  height: 100%;
}

.content {
  width: 100%;
  margin-top: -60rpx;
}

.content-item {
  width: 100%;
  height: 480rpx;
  margin-top: 73rpx;
}

.item-img-view {
  height: 430rpx;
}

.item-img {
  width: 100%;
  height: 100%;
}

.item-text-view {
  font-size: 35rpx;
  padding: 10rpx 40rpx 5rpx 40rpx;
  margin: 10rpx 0 5rpx 0;
}

.item-text2-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #4d4d4d;
  font-size: 30rpx;
  align-items: center;
}

.item-text2-view .text2 {
  color: #ef7687;
  font-size: 35rpx;
}

.line {
  background-color: #d6d6d6;
  height: 8rpx;
}