<view class="container">


  <view class='header'>
    <view class='header-img'>
      <image src='{{userInfo.avatarUrl}}'></image>
    </view>
    <text class='nickname'>{{userInfo.nickName}}</text>
  </view>

  <view class="content">
    <view class="personal" bindtap='personalInfo'>
      <text>个人信息</text>
      <text class="text2">></text>
    </view>
    <view class="line-view">
      <view class="line"></view>
    </view>
    <view class="personal" bindtap='personalActivity'>
      <text>已参加活动</text>
      <text class="text2">></text>
    </view>
    <view class="line-view">
      <view class="line"></view>
    </view>
    <view class="personal" bindtap='personalAuction'>
      <text>已参加拍卖</text>
      <view class="right">
        <view class="tip" wx:if="{{tip}}">
          <image src="../../images/icons/tip.png"></image>
        </view>
        <text class="text2">></text>
      </view>
    </view>
    <view class="line-view">
      <view class="line"></view>
    </view>
  </view>

</view>