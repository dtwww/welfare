.container {
  padding-bottom: 100rpx;
}

.head-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.head {
  padding: 40rpx 0 0 0;
  text-align: center;
  align-self: center;
  color: #ef7687;
}

.search {
  display: flex;
  flex-direction: row;
  border: 5rpx solid #ef7687;
  border-radius: 80rpx;
  padding: 10rpx;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  font-size: 33rpx;
}

.content-view {
  width: 100%; 
}

.piece {
  width: 100%;
  height: 100%;
}

.one {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 35rpx;
  padding: 30rpx 40rpx 30rpx 40rpx;
  margin: 20rpx 0 10rpx 0;
  align-items: center;
  color: #5b5b5b;
}

.title {
  width: 300rpx;
}

.canceled {
  font-size: 30rpx;
  color: #EF7687;
  width: 100rpx;
  margin-right: -100rpx;
}

.icon {
  width: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

image {
  width: 50rpx;
  height: 50rpx;
}

.add-view {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.add {
  margin-bottom: 30rpx;
}

.line-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.line {
  width: 94%;
  height: 5rpx;
  background-color: #d6d6d6;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: white;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 36rpx;
  color: white;
  text-align: center;
  background-color: #ef7687;
}

.modal-content {
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  text-align: center;
  font-size: 36rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-confirm {
  width: 50%;
  color: #ef7687;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
}